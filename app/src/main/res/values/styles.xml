<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Card">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">@dimen/margin_ver_m</item>
        <item name="android:layout_marginEnd">@dimen/margin_hor_m</item>
        <item name="cardCornerRadius">@dimen/radius_card</item>
        <item name="cardElevation">@dimen/elevation_card</item>
    </style>

    <style name="CardWrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingHorizontal">@dimen/padding_hor_m</item>
        <item name="android:paddingVertical">@dimen/padding_ver_m</item>
    </style>
</resources>